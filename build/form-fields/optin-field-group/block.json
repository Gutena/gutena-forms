{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "gutena/optin-field-group",
  "version": "1.0.0",
  "title": "Opt-in",
  "parent": [
    "gutena/forms"
  ],
  "category": "gutena",
  "icon": "privacy",
  "description": "Add a consent checkbox for privacy policies, terms, or GDPR compliance.",
  "attributes": {
    "nameAttr": {
      "type": "string",
      "default": "gf-input-1"
    },
    "fieldLabel": {
      "type": "string",
      "default": "Label"
    },
    "fieldLabelContent": {
      "type": "string",
      "default": ""
    },
    "fieldType": {
      "type": "string",
      "default": "optin"
    },
    "isRequired": {
      "type": "boolean",
      "default": false
    },
    "displayName": {
      "type": "string",
      "default": "Name"
    },
    "errorRequiredMsg": {
      "type": "string",
      "default": "Field is required"
    },
    "errorInvalidInputMsg": {
      "type": "string",
      "default": "Input is not valid"
    },
    "description": {
      "type": "string",
      "default": ""
    },
    "settings": {
      "type": "object",
      "default": {}
    }
  },
  "supports": {
    "__experimentalSettings": true,
    "align": [
      "wide",
      "full"
    ],
    "html": false,
    "spacing": {
      "margin": true,
      "padding": true,
      "blockGap": true
    },
    "__experimentalLayout": true
  },
  "textdomain": "gutena-forms",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}